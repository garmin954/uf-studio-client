{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UFACTORY-Studio",
  "version": "1.0.0",
  "identifier": "cc.ufactory.xarm-studio",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UFACTORY Studio",
        "width": 1280,
        "height": 768,
        "minWidth": 1080,
        "minHeight": 648,
        "visible": false,
        "url": "/app/home",
        "additionalBrowserArgs": "--enable-energy-saver --enable-gpu --ignore-gpu-blacklist"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "msi",
      "nsis",
      "dmg",
      "app",
      "deb",
      "appimage"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../src/assets/images/": "resources/images"
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYwMjQ4Qjc5MDRDNzgxRDEKUldUUmdjY0VlWXNrWUFyQzR3b3BsQWtTOEQxMXZuUUFDQk53MmNzckpFVm1wajdwUnNyNEtZWmEK",
      "endpoints": [
        "http://192.168.1.19/releases/xarm/xarm_tool/releases.json"
      ],
      "dangerousInsecureTransportProtocol": true
    }
  }
}